@{
}

@{
    ViewData["Title"] = "View Jobs";
}


@model List<JobPortalDI.ProjModel.Job>

<style>

    body {
        padding-bottom: 20px;
    }

    #divJob {
        margin: 10px;
        height: 250px;
        width: 1000px;
        background-color: #F5F5F5;
        border: 1px solid #5D6D7E;
    }

    #divEachJob {
        margin-top: 20px;
    }
</style>

<br>
<br>

<p>
    <a asp-controller="Login" asp-action="GoBack">&lt;&lt;Go back</a>
</p>
<br>
<br>

<h3>Jobs matching your search...</h3>

<br>
<br>

@foreach (var job in Model)
{
    // loop through each product
    <div id="divJob">
        <br>
        <div class="col-md-10">
            <h4 id="divEachJob">@Html.DisplayFor(modelItem => job.JobTitle)</h4>
            <p id="divEachJob">@Html.DisplayFor(modelItem => job.Description)</p>

        </div>
        <br />
        <div class="col-md-2">
            <form asp-controller="Login" asp-action="viewJob" asp-route-id="@job.Id">
                <button id="btn1" class="btn btn-info">View</button>
            </form>
        </div>
    </div>
    <br>
    <br>

}

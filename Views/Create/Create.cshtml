@{
}

@{
    ViewData["Title"] = "Create jobs";
}

@model JobPortalDI.ProjModel.Job


<style>
    input {
        width: 500px;
        height: 50px;
        border-radius: 5px;
    }

    #txa1 {
        width: 500px;
        height: 200px;
        border-radius: 5px;
        border: 2px solid black;
    }

    #sel1 {
        width: 500px;
        height: 50px;
        border: 2px solid black;
        border-radius: 5px;
        margin-left: 15px;
    }

    #p1 {
        text-indent: 30px;
        color: brown;
        font-weight: 700;
    }

    #p2 {
        text-indent: 30px;
        color: #000;
        font-style: italic;
    }

    #crt-btn {
        background-color: #009933;
        color: white;
        margin-left: 50px;
        margin-bottom: 20px;
        width: 100px;
        height: 50px;
    }

    #divfm {
        margin-left: 150px;
        margin-right: 150px;
        height: 1300px;
        width: 800px;
        padding: 10px;
        border: 2px solid black;
        background-color: beige;
    }
</style>

<br>
<br>
<h2>Create your job post</h2>
<br>

<div id="divfm">
    <form id="jobform" asp-controller="Create" asp-action="CreateJob">

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Userid" value="@ViewBag.uid" />

        <p id="p1">Industry: </p>
        &emsp;&emsp;&emsp;
        <select id="sel1" name="category" class="form-control" required>
            <option value="0" disabled selected>Choose Category</option>
            @foreach (var category in ViewBag.categoryData)
            {
                // loop through each product
                <option value="@category.Id">@category.Name</option>
            }


        </select>
        <br>
        <br>

        <p id="p1">Company Name: </p>
        &emsp;<input type="text" asp-for="Company" required>
        <br>
        <br>

        <p id="p1">Job Title: </p>
        &emsp;<input type="text" asp-for="JobTitle" required>
        <br>
        <br>

        <p id="p1">Description(max. 199 words): </p>
        &emsp;<textarea id="txa1" form="jobform" maxlength="199" asp-for="Description" required></textarea>
        <br>
        <br>

        <p id="p1">Salary offered: </p>
        &emsp;<input type="number" min="30000" max="90000" asp-for="Salary" required>
        <br>
        <br>

        <p id="p1">Location: </p>
        &emsp;<input type="text" asp-for="Location" required>
        <br>
        <br>

        <p id="p1">HR Contact: </p>
        &emsp;<input type="text" asp-for="ContactUser" required>
        <br>
        <br>

        <p id="p1">Email: </p>
        &emsp;<input type="email" asp-for="ContactEmail" required>
        <br>
        <br><br><br>


        <input type="submit" id="crt-btn" value="Create Job">


    </form>

</div>

<br>
<br>
